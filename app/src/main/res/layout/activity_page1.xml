<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="463dp"
        android:layout_height="75dp"
        android:layout_marginBottom="4dp"
        android:background="#FF9800"
        android:elegantTextHeight="false"
        android:text="ECOLE IRSI - 6-8 des deux coussins Paris 17e"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="2dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="184dp"
        android:layout_height="123dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/enquete"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="209dp"
        android:layout_height="127dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="29dp"
        android:text="Q1 : Quel est votre avis géneral ?"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <RadioGroup
        android:id="@+id/idQ1"
        android:layout_width="354dp"
        android:layout_height="183dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="28dp">

        <RadioButton
            android:id="@+id/idQ11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trés satisfait" />

        <RadioButton
            android:id="@+id/idQ12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Satisfait" />

        <RadioButton
            android:id="@+id/idQ13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peu satisfait" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="368dp"
            android:layout_height="57dp"
            android:layout_marginTop="7dp"
            android:text="Q2 : Pensez-vous que des efforts ont été faits pour l'amélioration ?"
            android:textSize="21sp"
            android:textStyle="bold" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/idQ2"
        android:layout_width="363dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@+id/idQ1"
        tools:layout_editor_absoluteX="19dp">

        <RadioButton
            android:id="@+id/idQ22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Satisfait" />

        <RadioButton
            android:id="@+id/idQ21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trés satisfait" />

        <RadioButton
            android:id="@+id/idQ23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peu satisfait" />

    </RadioGroup>

    <Button
        android:id="@+id/idSuivant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="28dp"
        android:background="#E91E63"
        android:text="SUIVANT"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>